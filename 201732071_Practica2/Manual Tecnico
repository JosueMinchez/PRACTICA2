		 movimientoTorre(var col,var fil)
	imagen boton
        var c=col
        var f=fil
        var aux=0


        mientras(true)

            fil=fil+1
            si(col<0 || fil>7)
                aux=aux+1;
                descansar;
            si(n[col][fil]==1 
                descansar


        //diagonal arriba izquierda
        col=c;
        fil=f;
        mientras(true)

            fil=fil-1;
            if(col<0 || fil<0)
                aux=aux+1;
                descansr
            
            if(n[col][fil]==1)
                descansar
  

        Fin
